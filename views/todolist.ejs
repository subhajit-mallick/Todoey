<%- include('header') %>

  <div class="box heading">
    <h1>
      <%= day %>
    </h1>
  </div>

  <div class="box">
    <% items.forEach((item, index)=>{ %>
      <div class="item">
        <% let c=(item.chk) ? "checked" : "" %>
          <input type="checkbox" class="chk" <%=c %> value="<%= index %>">
            <p>
              <%= item.name %>
            </p>
      </div>
      <% }); %>

        <form class="item" method="post" action="/">
          <input name="item" type="text" autocomplete="off" placeholder="Add items...">
          <button type="submit">+</button>
        </form>
  </div>

  <%- include('footer') %>

    <script>
      $(document).ready(function () {
        $(".chk").click(function (event) {
          $.post("/chk",
            {
              index: $(event.delegateTarget).val(),
            });
        });

        $(".reset").click(() => {
          $.post("/r");
        });
      });
    </script>