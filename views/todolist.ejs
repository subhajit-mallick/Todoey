<%- include('header') %>

  <div class="box heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>

  <div class="box">
    <% items.forEach((item)=>{ %>
      <form method="post" action="/chk">
        <div class="item">
          <input type="checkbox" name="checkbox" onChange="this.form.submit()" value="<%= item._id %>">
          <p>
            <%= item.text %>
          </p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>">
      </form>

      <% }); %>

        <form class="item" method="post" action="/">
          <input name="itemText" type="text" autocomplete="off" placeholder="Add items...">
          <button name="listName" class="btn-add" type="submit" value="<%= listTitle %>">+</button>
        </form>
  </div>

